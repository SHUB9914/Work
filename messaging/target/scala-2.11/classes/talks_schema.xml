        <fieldType class="org.apache.solr.schema.TrieLongField" name="TrieLongField"/>
        <fieldType class="org.apache.solr.schema.TextField" name="TextField">
            <analyzer>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>
        <fieldType class="org.apache.solr.schema.StrField" name="StrField"/>
    </types>
    <fields>
        <field indexed="true" multiValued="false" name="user1id" stored="true" type="StrField"/>
        <field indexed="true" multiValued="false" name="user2id" stored="true" type="StrField"/>
        <field indexed="true" multiValued="false" name="lastmsgts" stored="true" type="TrieLongField" docValues="true"/>
        <field indexed="true" multiValued="false" name="lastmsg" stored="true" type="TextField"/>
        <field indexed="true" multiValued="false" name="senderid" stored="true" type="TextField"/>
        <field indexed="true" multiValued="false" name="user2nickname" stored="true" type="TextField"/>
    </fields>
    <uniqueKey>(user1id,user2id,lastmsgts)</uniqueKey>
</schema>
